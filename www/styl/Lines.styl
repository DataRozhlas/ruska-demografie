&.lines
  margin-bottom 38px
  .line
    h2
      font-size 18px !important
      font-weight 400 !important
    svg
      path
        fill none
        stroke RussianBlue
        stroke-width 1.5px
      circle
        stroke RussianBlue
        fill white
        stroke-width 1px
        &.significant
          fill RussianBlue
      g.axis
        line.extent
        line.mark
          stroke #d
          shape-rendering crispEdges
          &.significant
            stroke RussianBlue
        text
          font-size 11px
          fill darken(RussianBlue, 50%)
  .col.no-heading
    h2
      display none
    svg
      margin-top 20px
  .col.other-color
    svg
      circle
        stroke RussianRed
        &.significant
          fill RussianRed
      path
        stroke RussianRed
      g.axis
        line.mark.significant
          stroke RussianRed
        text
          fill darken(RussianRed, 50%)
  &.lines-russia-czech
    .col:nth-child(7)
      g.axis.y text:last-of-type
        display none
