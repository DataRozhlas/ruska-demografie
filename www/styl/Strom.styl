&.strom
  float left
  width 100%
  .tree
    width 485px
    margin-left (258px + marginLeft)
    position relative
    .line
      width 100%
      height 4px
      float left
      position relative
      .bar
        position absolute
        height 4px
        &.muzi
          right 50%
          background RussianBlue
          border-bottom 1px solid lighten(RussianBlue, 50%)
        &.zeny
          left 50%
          border-left 1px solid white
          border-bottom 1px solid lighten(RussianRed, 50%)
          background RussianRed
      .oppbar
        position absolute
        height 3px
        width 2px
        &.zeny
          background RussianRed
        &.muzi
          background RussianBlue
      &.not-x
        .bar
          opacity 0.2
    .popisek
      position absolute
      &.left
        left (-227px - 30px)
        width 227px
        .content
          text-align right
          padding-right 20px
      &.right
        right (-227px - 30px + marginLeft)
        width (227px - marginLeft)
        .content
          padding-left 20px
      &:before
        content " "
        position absolute
        top 0px
        bottom 0px
        width 4px
      &.right:before
        left 0px
        border 1px dashed #a
        border-left 0px none
      &.left:before
        right 0px
        border 1px dashed #a
        border-right 0px none
      &.single-line:before
        border-bottom 0px none
      .content
        width 100%
        position absolute
        transform translate(0, -50%)
  &:hover
    .line
      opacity 0.2
      &:hover
        opacity 1
    .popisek
      opacity 0
      &.active
        opacity 1

