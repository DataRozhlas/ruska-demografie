&.prirustky
  position relative
  margin-top 20px
  height 470px
  .col
    h4
      margin-bottom 4px
      font-weight normal
      white-space normal
    p
      font-size 12px
  .col:nth-child(2)
    > div
      width 485px
      margin-left marginLeft

  .col:nth-child(4) > div
    width 189px

  svg
    circle.point
      fill #d73027
      fill-opacity 0.7
    g.highlight
      circle
        fill none
        stroke #b
        stroke-dasharray 3, 1.5
      line
        shape-rendering crispEdges
        stroke #a
        stroke-dasharray 3, 2
      text
        font-size 10px
        text-transform uppercase
    line.sustainment-line
      stroke #a
      shape-rendering crispEdges
      stroke-dasharray 3, 4
    text
      color #6
      font-size 14px
      font-variant small-caps
    g.voronoi
      path
        fill transparent
    g.highlight-circle
      circle
        visibility hidden
        stroke-dasharray 3, 3
        fill none
        stroke #6
        &.active
          visibility visible
  &.active
    .point:not(.active)
      fill-opacity 0.05
    g.highlight:not(.active)
      display none
    .col:nth-child(2)
      .feature:not(.active)
        opacity 0.2
        fill rgb(247,252,185)
    .col:nth-child(4)
      svg
        .feature:not(.active)
          opacity 0.2
          fill rgb(239,237,245)
    .survival-line
      opacity 0
  .col:nth-child(3)
    display none
  .col:nth-child(2)
    svg
      margin-top 28px
      transform scale(2.56)
      transform-origin 0 0
      display block
      g.highlight-circle
        circle
          stroke-width 0.5
          stroke-dasharray 1.5, 1.5
    p
      position absolute
      top 408px
  .col:nth-child(4)
    svg + h3
      margin-top 20px
