&.prirustky
  .col
    h3
      margin-bottom 4px
    p
      font-size 12px
  .col:nth-child(2)
  .col:nth-child(3)
  .col:nth-child(4)
    > div
      width ((1000px - 90px) / 4 - (marginLeft / 3))
      padding-left marginLeft

  svg
    circle.point
      fill #d73027
      fill-opacity 0.7
    g.highlight
      circle
        fill none
        stroke #b
        stroke-dasharray 3, 1.5
      line
        shape-rendering crispEdges
        stroke #a
        stroke-dasharray 3, 2
      text
        font-size 10px
        text-transform uppercase
    line.sustainment-line
      stroke #a
      shape-rendering crispEdges
      stroke-dasharray 3, 4
    text
      color #6
      font-size 14px
      font-variant small-caps
    g.voronoi
      path
        fill transparent
    g.highlight-circle
      circle
        visibility hidden
        stroke-dasharray 3, 3
        fill none
        stroke #6
        &.active
          visibility visible
  &.active
    .point:not(.active)
      fill lighten(#d73027, 95%)
      fill-opacity 1
    g.highlight:not(.active)
      display none
    .col:nth-child(2)
      .feature:not(.active)
        opacity 0.2
        fill rgb(239,237,245)
    .col:nth-child(3)
      .feature:not(.active)
        opacity 0.2
        fill rgb(247,252,185)
    .survival-line
      opacity 0
